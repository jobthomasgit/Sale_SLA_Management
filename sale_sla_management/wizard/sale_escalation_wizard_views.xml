<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_escalation_wizard" model="ir.ui.view">
            <field name="name">Sale Escalation</field>
            <field name="model">sale.escalation.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Escalation">
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="escalation_reason"/>
                        <field name="responsible_user_id"/>
                    </group>
                    <footer>
                        <button name="action_confirm_escalation" string="Confirm Escalation"
                               class="oe_highlight" type="object"/>
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
